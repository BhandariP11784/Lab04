//Program calculates monthly mortgage payment with given variables



public class Lab04avst
{
    public static void main(String[] args)
    {
        System.out.println("Lab04a, Student Version\n");

        double principal  = 250000;
        double annualRate = 0.0485/12;
        double numYears   = 30;
        double numMonths  = numYears*12; 
        
       System.out.println("Principal:       $" + principal);
       System.out.println("Annual Rate     "+ annualRate);
       System.out.println("%");
       System.out.println("Number of Years " + numYears);
       
       double equPow= Math.pow(1+annualRate,numMonths);
       double numerator= annualRate*equPow
       double denominator= equPow-1 
       
       System.out.println("Monthly Payment:" + (numerator/denominator)*principal);
       System.out.println();
